<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 定义title bar 中间的字体样式-->
    <style name="black_title_text">
        <item name="android:textColor">#373737</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--其他-->
    <style name="app_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!-- 定义title bar 中间的字体样式-->
    <style name="black_title">
        <item name="android:textColor">#2f2f2f</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="item_grey_des">
        <item name="android:textColor">#6b6b6b</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Base application theme. -->
    //valuse

    <style name="TranslucentTheme" parent="AppTheme"></style>

    <style name="button_blue_text">
        <item name="android:textColor">#01c6f0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button_white_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    //天气

    <style name="weather_temp">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="weather_status">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="weather_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="weather_content">
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="weather_title_blue">
        <item name="android:textColor">#00c6f3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="weather_data">
        <item name="android:textColor">#00c6f3</item>
        <item name="android:textSize">18sp</item>
    </style>

    //教学课件

    <style name="courseware_title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="courseware_sub_title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="courseware_skill_des">
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="courseware_skill_num">
        <item name="android:textColor">#9a9a9a</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="courseware_list">
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="courseware_detail">
        <item name="android:textColor">#343434</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 图片查看器数字显示-->
    <style name="photo_check">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--领航文字-->
    <style name="pilot_input">
        <item name="android:textColorHint">#979797</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="pilot_des_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="pilot_title">
        <item name="android:textColor">#353535</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--训练计划-->
    <style name="train_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="train_small_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="train_small_grey">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--飞前准备-->
    <style name="prepare_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="prepare_small_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="prepare_grey">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--dialog style-->
    <style name="dialog_title">
        <item name="android:textColor">#343434</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialog_title_sub">
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dialog_sure_cancel">
        <item name="android:textColor">#01c6f0</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="dialog_content_light_grey_small">
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--首页天气-->
    <style name="title_white_txt">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="title_white_small_txt">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
