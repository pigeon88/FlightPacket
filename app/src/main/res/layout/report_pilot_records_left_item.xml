<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:showDividers="middle"
        android:divider="@drawable/v9_divider_vertical_blue_selector">

        <TextView
            android:id="@+id/tv_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="地点"
            android:textColor="@color/report_cell_name"/>

        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="地点代号" />

        <TextView
            android:id="@+id/tv_item3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="纬度" />

        <TextView
            android:id="@+id/tv_item4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="经度" />

        <TextView
            android:id="@+id/tv_item5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="磁航线角" />

        <TextView
            android:id="@+id/tv_item6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="偏流地速" />

        <TextView
            android:id="@+id/tv_item7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="高度" />

        <TextView
            android:id="@+id/tv_item8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="空速" />

        <TextView
            android:id="@+id/tv_item9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="距离" />

        <TextView
            android:id="@+id/tv_item10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="时间" />
    </LinearLayout>

</LinearLayout>