<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlt_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_bg"
        android:orientation="horizontal"
        android:padding="@dimen/comm_15dp">

        <CheckBox
            android:id="@+id/cb_choose6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@null"
            android:clickable="false"
            android:drawableStart="@drawable/unupload_checked"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comm_20dp"
            android:layout_toRightOf="@id/cb_choose6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WD" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yuji"
                    style="@style/item_grey_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计时刻：12:15" />

                <TextView
                    android:id="@+id/tv_shiji"
                    style="@style/item_grey_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/comm_10dp"
                    android:text="实际时刻：12:15" />
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/tv_check6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/kejian_you" />
    </RelativeLayout>
</LinearLayout>