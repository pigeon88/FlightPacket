<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="180dp">


        <com.hsy.flightpacket.views.SignatureView
            android:id="@+id/sv_content"
            android:layout_width="320dp"
            android:layout_height="180dp" />

        <TextView
            style="@style/prepare_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/comm_10dp"
            android:text="手势签字区" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#dcdcdc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/comm_10dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/button_blue_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_white_bg_blue_border"
            android:gravity="center"
            android:padding="@dimen/comm_10dp"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_clear"
            style="@style/button_blue_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comm_10dp"
            android:layout_weight="1"
            android:background="@drawable/button_white_bg_blue_border"
            android:gravity="center"
            android:padding="@dimen/comm_10dp"
            android:text="清除" />

        <TextView
            android:id="@+id/sure"
            style="@style/button_blue_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comm_10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_blue_with_radius0"
            android:gravity="center"
            android:padding="@dimen/comm_10dp"
            android:text="确定"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>