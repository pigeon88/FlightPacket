<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_name"
        style="@style/prepare_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/comm_10dp"
        android:text="检查计划名称" />


    <EditText
        android:id="@+id/edt_check_plan_name"
        style="@style/pilot_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/comm_10dp"
        android:background="@drawable/box_unchecked"
        android:hint="请输入检查计划名称" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/comm_10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/button_blue_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_white_bg_blue_border"
            android:gravity="center"
            android:padding="@dimen/comm_10dp"
            android:text="取消" />


        <TextView
            android:id="@+id/sure"
            style="@style/button_blue_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comm_50dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_blue_with_radius0"
            android:gravity="center"
            android:padding="@dimen/comm_10dp"
            android:text="确定"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>