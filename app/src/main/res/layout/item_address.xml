<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comm_10dp"
        android:background="@drawable/button_white_bg_blue_border"
        android:paddingBottom="@dimen/comm_5dp"
        android:paddingLeft="@dimen/comm_20dp"
        android:paddingRight="@dimen/comm_20dp"
        android:paddingTop="@dimen/comm_5dp"
        android:text="孔滩镇"
        android:textColor="@color/blue_comm" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@id/tv_des"
        android:background="@mipmap/ic_close" />
</RelativeLayout>