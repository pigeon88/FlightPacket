<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    android:padding="@dimen/comm_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/llt_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_click_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/comm_15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kejian_icon_shandi" />

            <TextView
                style="@style/courseware_skill_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_20dp"
                android:text="山地飞行" />

            <TextView
                style="@style/courseware_skill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_10dp"
                android:text="(61)" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comm_15dp"
            android:layout_weight="1"
            android:background="@drawable/item_click_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/comm_15dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kejian_icon_yejian" />

            <TextView
                style="@style/courseware_skill_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_20dp"
                android:text="夜间飞行" />

            <TextView
                style="@style/courseware_skill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_10dp"
                android:text="(125)" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comm_15dp"
            android:layout_weight="1"
            android:background="@drawable/item_click_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/comm_15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kejian_icon_jidong" />

            <TextView
                style="@style/courseware_skill_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_20dp"
                android:text="机动动作" />

            <TextView
                style="@style/courseware_skill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_10dp"
                android:text="(32)" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comm_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llt_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_click_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/comm_15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kejian_icon_xingneng" />

            <TextView
                style="@style/courseware_skill_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_20dp"
                android:text="装备性能" />

            <TextView
                style="@style/courseware_skill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_10dp"
                android:text="(11)" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comm_15dp"
            android:layout_weight="1"
            android:background="@drawable/item_click_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/comm_15dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kejian_icon_fanhang" />

            <TextView
                style="@style/courseware_skill_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_20dp"
                android:text="气流变化" />

            <TextView
                style="@style/courseware_skill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_10dp"
                android:text="(36)" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comm_15dp"
            android:layout_weight="1"
            android:background="@drawable/item_click_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/comm_15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kejian_icon_qiliu" />

            <TextView
                style="@style/courseware_skill_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_20dp"
                android:text="安全返航" />

            <TextView
                style="@style/courseware_skill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_10dp"
                android:text="(32)" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>