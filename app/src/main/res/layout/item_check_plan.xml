<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlt_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_bg"
        android:orientation="horizontal"
        android:padding="@dimen/comm_15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cb_choose6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汽化器加温杆" />

            <TextView
                android:id="@+id/des"
                style="@style/item_grey_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_10dp"
                android:text="按下" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_check6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_white_bg_blue_border"
            android:paddingBottom="@dimen/comm_5dp"
            android:paddingLeft="@dimen/comm_20dp"
            android:paddingRight="@dimen/comm_20dp"
            android:paddingTop="@dimen/comm_5dp"
            android:text="开始检查"
            android:textColor="#01c6f0" />

        <ImageView
            android:id="@+id/iv_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/kejian_you" />
    </RelativeLayout>

</LinearLayout>